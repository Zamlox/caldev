{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "bazel_run",
            "type": "shell",
            "command": "/home/iosif/stash/rebolview",
            "args": [
                "-qsv",
                "src/tests/test1.r"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "bazel_build",
            "type": "shell",
            "command": "bazel build :rosdk",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bazel_debug_build",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                ":unittests",
                "--compilation_mode=dbg"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "bazel_debug_build_linux_32bit",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "--config=i386_linux",
                ":unittests",
                "--compilation_mode=dbg"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "bazel_debug_build_windows_32bit",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "--cpu=x64_x86_windows",
                ":rebosdk32",
                "--compilation_mode=dbg"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            }, 
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
