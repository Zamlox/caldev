{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {                                
            "name": "(unittests) Rebosdk Launch",
            //"type": "cppdbg",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/bazel-bin/unittests",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/bazel-bin",
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb",
                "miDebuggerPath": "/Applications/Xcode.app/Contents/Developer/usr/bin/lldb-mi",
            },
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
            },
            "preLaunchTask": "bazel_debug_build",
            "logging": { "engineLogging": true },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {                                
            "name": "(unittests) Rebosdk linux 32bit Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/bazel-bin/unittests",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/bazel-bin",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "bazel_debug_build_linux_32bit",
            "logging": { "engineLogging": true },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {                                
            "name": "(unittests) Rebosdk windows 32bit Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/bazel-bin/unittests",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/bazel-bin",
            "externalConsole": false,
            "preLaunchTask": "bazel_debug_build_windows_32bit",
            "logging": { "engineLogging": true },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {                                
            "name": "(Rebol2) Rebosdk windows 32bit Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:\\Program Files (x86)\\rebol\\view\\rebol.exe",
            "args": ["-sqv", "${workspaceFolder}/src/tests/bindings/rebol2/tests.r"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/bazel-bin",
            "externalConsole": false,
            "preLaunchTask": "bazel_debug_build_windows_32bit",
            "logging": { "engineLogging": true },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
    ]
}
