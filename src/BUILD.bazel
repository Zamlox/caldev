load("@rules_cc//cc:defs.bzl", "cc_binary", "cc_library", "cc_test")

SRCS = glob([
        "api/**",
        "modules/**/*.h",
        "modules/**/*.cpp",
    ]) + select({
        "@bazel_tools//src/conditions:windows": glob([
            "internal/**/*.h",
            "internal/**/*.cpp",
        ], exclude=["internal/os/linux/**"]),
        "//conditions:default": glob([
            "internal/**/*.h",
            "internal/**/*.cpp",
        ], exclude=["internal/os/windows/**"])
    })
COPTS = [
        "-Iapi",
        "-Iapi/rebol/imp",
        "-Iinternal/os",
        "-Iinternal/gui",
        "-Iextern/glfw/include",
        "-Iextern/imgui",
        "-Iextern/imgui/examples",
    ] + [
        "-std:c++17",
    ] + select({
        "@bazel_tools//src/conditions:windows": [
            "-DOS_WINDOWS",
        ],
        "//conditions:default": [
            "-DOS_LINUX"
        ]
    })


cc_library(
    name = "rebosdklib",
    srcs = SRCS,
    copts = COPTS,
    deps = [
        "//extern/glfw:glfw",
        "//extern/imgui:imgui",
    ],
    visibility = ["//visibility:public"],
    linkopts = select({
        "@bazel_tools//src/conditions:windows": [
            "user32.lib", "gdi32.lib", "shell32.lib", "opengl32.lib",
        ],
        "//conditions:default": [
            "-ldl", "-lpthread", "-lGL"
        ]
    }),
)

cc_binary(
    name = "rebosdk",
    srcs = SRCS,
    copts = COPTS,
    deps = [ 
        ":rebosdklib",
    ],
    linkshared = True,
)

cc_test(
    name = "unittests",
    srcs = SRCS + glob([
        "tests/**/*.cpp",
        "tests/**/*.h",
    ]),
    copts = [
        "-Iextern/googletest/googletest/include",
        "-Iapi/rebol",
        "-Imodules/gui",
    ] + COPTS,
    deps = [
        "//extern/googletest:gtest_main",
        ":rebosdklib",
    ],
)